<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e2ec"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#601cec"
        app:titleTextColor="#FFFFFF"
        tools:ignore="MissingConstraints" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
        app:layout_constraintVertical_bias="0.13"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal|center_vertical"
            android:text="Main Menu"
            android:layout_marginBottom="50dp"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/workoutsButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            app:srcCompat="@drawable/workouts_icon"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/weightTrackerButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            app:srcCompat="@drawable/weight_tracker_icon"
            app:tint="#000000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Workouts" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Weight Tracker" />

        <ImageButton
            android:id="@+id/socialMediaButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            app:srcCompat="@drawable/habit_tracker_icon"
            android:layout_columnWeight="1"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/habitTrackerButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            app:srcCompat="@drawable/socialmedia_icon"
            android:layout_columnWeight="1"
            app:tint="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="87dp"
            android:layout_height="16dp"
            android:text="Habit Tracker"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="LOG OUT" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>